<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".startPage">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginLeft="90dp"
        android:layout_marginBottom="30dp"
        android:src="@drawable/rogo"
        android:id="@+id/rogo"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="커피 공방"
        android:gravity="center"
        android:layout_marginLeft="100dp"
        android:layout_marginBottom="60dp"
        android:textStyle="bold"
        android:textColor="#D49D8D"
        android:textSize="30dp"
        android:id="@+id/rogo_name"
        android:layout_below="@+id/rogo"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rogo_name"
        android:textSize="35dp"
        android:textColor="#D49D8D"
        android:padding="10dp"
        android:text="취향테스트 시작하기"
        android:gravity="center"
        android:layout_marginBottom="20dp"
        android:background="@drawable/next_button"
        android:id="@+id/startTest"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/startTest"
        android:textSize="35dp"
        android:textColor="#D49D8D"
        android:padding="10dp"
        android:text="취향테스트 건너뛰기"
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:background="@drawable/next_button"
        android:id="@+id/skipTest"/>

</RelativeLayout>